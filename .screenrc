startup_message off
#termcapinfo xterm*|Eterm|mlterm|rxvt 'hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007'
termcapinfo rxvt-256color ti@:te@     #enable SHIFT-PGUP / SHIFT-PGDOWN scroll
#termcapinfo wy* CS=\E[?1h:CE=\E[?1l:vi=\E[?25l:ve=\E[?25h:VR=\E[?5h:VN=\E[?5l:cb=\E[1K:CD=\E[1J
terminfo rxvt-256color ti@:te@:
term screen-256color
setenv LC_CTYPE en_US.UTF-8
defutf8 on
setenv DISPLAY ':0'
defscrollback 5000
nonblock on
vbell off
msgwait 5
shelltitle ''
chdir	# start in $HOME

screen    -t 'ncmpcpp' 0 ncmpcpp
screen    -t '' 1
screen    -t '' 2
screen    -t '' 3
screen    -t 'bash' 4 bash
screen    -t 'syslog' 5 sudo inotail -f -n 30 /var/log/everything.log
screen    -t 'irsii' 6 irssi
screen    -t 'htop' 7 htop
select 1

bind = resize =
bind + resize +1
bind - resize -1
bind _ resize max
#bind c screen 1 # Window numbering starts at 1, not 0.
#bind 0 select 10
